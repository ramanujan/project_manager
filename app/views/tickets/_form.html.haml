.row-fluid
  .span12
    .heading
      =@ticket.new_record? ? t("tickets.new.heading") : t("tickets.edit.heading")
    .bee-form
      =form_for [@project,@ticket] do |f| 
        .bee-label=f.label :title, t("tickets.new.label_title")
        .bee-input=f.text_field :title
    
        .bee-label=f.label :description, t("tickets.new.description")
        .bee-input=f.text_area :description, rows:5
    
        %div 
          =@ticket.new_record? ? (f.submit t("tickets.new.submit"), class:"btn btn-large btn-primary") : (f.submit t("tickets.edit.submit"), class:"btn btn-large btn-primary")  

