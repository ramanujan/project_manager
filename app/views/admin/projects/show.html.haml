=render "shared/flash_messages"
.row-fluid
  .span1 &nbsp;
  
  .span10
    %div{id:"main"}
      
      .row-fluid
        .span2
          =link_to [:edit,:admin,@project], class:"btn btn-primary" do
            %i.icon-edit.icon-white
            =t("admin.products.edit.edit_project")
        .span2
          =link_to [:admin,@project], method:"delete",
            data:{confirm:t("admin.projects.delete.confirm",title:@project.title)}, class:"btn btn-danger" do
            %i.icon-trash.icon-white
            =t("admin.products.delete.delete_project")

      .row-fluid
        .project_attribute=sanitize t("admin.projects.show.description",title: @project.title )
      
      .row-fluid
        %span.project_description=sanitize(@project.description)   
    
      
      .row-fluid
        .project_attribute=t("admin.projects.show.details",title:@project.title) 
    
      .row-fluid
        .span2 
          .project_detail=t("admin.projects.show.created_at")   
        .span10
          .project_detail_value=l(@project.created_at,:format=>:long)
      %hr.cool

      .row-fluid
        .span2
          .project_detail=t("admin.projects.show.updated_at")

        .span10
          .project_detail_value=l(@project.updated_at,:format=>:long)

  .span1 &nbsp; 